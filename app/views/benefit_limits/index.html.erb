<p id="notice"><%= notice %></p>

<h1>Benefit Limits</h1>

<table>
  <thead>
    <tr>
      <th>Destination class</th>
      <th>Benefit category</th>
      <th>Benefit</th>
      <th>Currency</th>
      <th>Limit</th>
      <th>Remarks</th>
      <th>From</th>
      <th>To</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @benefit_limits.each do |benefit_limit| %>
      <tr>
        <td><%= benefit_limit.destination_class %></td>
        <td><%= benefit_limit.benefit_category %></td>
        <td><%= benefit_limit.benefit %></td>
        <td><%= benefit_limit.currency %></td>
        <td><%= benefit_limit.limit %></td>
        <td><%= benefit_limit.remarks %></td>
        <td><%= benefit_limit.from %></td>
        <td><%= benefit_limit.to %></td>
        <td><%= link_to 'Show', benefit_limit %></td>
        <td><%= link_to 'Edit', edit_benefit_limit_path(benefit_limit) %></td>
        <td><%= link_to 'Destroy', benefit_limit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

