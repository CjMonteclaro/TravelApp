<p id="notice"><%= notice %></p>

<h1>Benefit Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>From</th>
      <th>To</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @benefit_categories.each do |benefit_category| %>
      <tr>
        <td><%= benefit_category.name %></td>
        <td><%= benefit_category.from %></td>
        <td><%= benefit_category.to %></td>
        <td><%= link_to 'Show', benefit_category %></td>
        <td><%= link_to 'Edit', edit_benefit_category_path(benefit_category) %></td>
        <td><%= link_to 'Destroy', benefit_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

