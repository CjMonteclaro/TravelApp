<p id="notice"><%= notice %></p>

<h1>Travellers</h1>

<table>
  <thead>
    <tr>
      <th>Quote</th>
      <th>Policy</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Birthdate</th>
      <th>Age</th>
      <th>Beneficiary</th>
      <th>Travel prem</th>
      <th>Base prem</th>
      <th>Total charges</th>
      <th>Gross prem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @travellers.each do |traveller| %>
      <tr>
        <td><%= traveller.quote %></td>
        <td><%= traveller.policy %></td>
        <td><%= traveller.first_name %></td>
        <td><%= traveller.last_name %></td>
        <td><%= traveller.birthdate %></td>
        <td><%= traveller.age %></td>
        <td><%= traveller.beneficiary %></td>
        <td><%= traveller.travel_prem %></td>
        <td><%= traveller.base_prem %></td>
        <td><%= traveller.total_charges %></td>
        <td><%= traveller.gross_prem %></td>
        <td><%= link_to 'Show', traveller %></td>
        <td><%= link_to 'Edit', edit_traveller_path(traveller) %></td>
        <td><%= link_to 'Destroy', traveller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

