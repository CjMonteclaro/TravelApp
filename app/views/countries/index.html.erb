<p id="notice"><%= notice %></p>

<h1>Countries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Shortname</th>
      <th>Shortname2</th>
      <th>Capital</th>
      <th>Region</th>
      <th>Subregion</th>
      <th>Destination class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= country.shortname %></td>
        <td><%= country.shortname2 %></td>
        <td><%= country.capital %></td>
        <td><%= country.region %></td>
        <td><%= country.subregion %></td>
        <td><%= country.destination_class %></td>
        <td><%= link_to 'Show', country %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

